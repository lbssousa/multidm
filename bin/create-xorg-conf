MDM_PREFIX=/
MDM_SCRIPTS=${MDM_PREFIX}/usr/sbin
MDM_INCLUDE=${MDM_SCRIPTS}/mdm-common
source $MDM_INCLUDE

NEW_FILE=$(X -configure 2>&1 | grep "^Your xorg.conf file is " | cut -d' ' -f5)

mv $NEW_FILE $MDM_XORG_CONF

# As far as I've tested, openchrome still doesn't work with multiple screens
# (definition of "far": tested with via 0x3344 in June 2008)
sed -i s/openchrome/vesa/g $MDM_XORG_CONF

echo '
Section "ServerFlags"
    Option    "DontVTSwitch"       "yes"
    Option    "DontZoom"           "yes"
    Option    "DontZap"            "yes"
    Option    "AllowMouseOpenFail" "yes"
    # Option    "BlankTime"    "0"
    # Option    "StandbyTime"  "0"
    # Option    "SuspendTime"  "0"
    # Option    "OffTime"      "0"
EndSection' >> $MDM_XORG_CONF
